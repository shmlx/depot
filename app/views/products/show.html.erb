<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Image url:</b>
  <%= @product.image_url %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<%= button_to 'Delete', @product, :method => :delete, :confirm => 'Are you sure?' %>
<%= link_to 'Edit', edit_product_path(@product) %> |
