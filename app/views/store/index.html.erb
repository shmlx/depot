<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1><%= t('.title_html') %></h1>
<% if session[:counter] > 5 %>
<p><%= pluralize(session[:counter], 'visit')  %> so far</p>
<% end %>
<% @products.each do | product |
  if params[:set_locale] = 'lv'
    product.price = convert_price_to_lvl(product.price)
  end
 %>
  <div class="entry">
    <%= link_to(image_tag(product.image_url, :class => 'list_image'), line_items_path(:product_id => product), :method => :post) %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price">
        <%= number_to_currency(product.price) %>
        <%= button_to t('.add_html'), line_items_path(:product_id => product), :remote => true %>
      </span>
    </div>
  </div>
<% end %>
